    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#FEFEFE"></solid>
            <corners android:radius="25dp" />
            <stroke android:width="3dp" android:color="#B7000000"/>
        </shape>
    </item>

</selector>


