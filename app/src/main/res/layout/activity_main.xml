<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <CheckBox
        android:id="@+id/cb_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/cb_green"
        android:layout_alignTop="@id/cb_green"
        android:layout_marginEnd="16dp"
        android:padding="4dp"
        android:text="RED"
        android:background="#FF0000"
        android:textColor="#FFFFFF"
        />

    <CheckBox
        android:id="@+id/cb_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="4dp"
        android:background="#00FF00"
        android:text="Green"
        />

    <CheckBox
        android:id="@+id/cb_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cb_green"
        android:layout_marginStart="8dp"
        android:padding="4dp"
        android:layout_alignTop="@id/cb_green"
        android:text="Blue"
        android:background="#0000FF"
        android:textColor="#CDECDE"
        />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/cb_red"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:text="My Text"
        android:textSize="18sp"
        android:textStyle="bold"
        />


    <Button
        android:id="@+id/bt_click_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cb_green"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="Click Me"
        android:textColor="#CDECDE"/>

</RelativeLayout>